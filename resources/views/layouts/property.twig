{% extends 'app.twig' %}

<form name="form" method="post">

	<input type="hidden" name="service" value="property">

	{% include 'form/contact.html' %}
	â€‹
	{% include 'form/address.html' %}
	
	<fieldset>
		<legend>Your {{ service }}</legend>
		<p>
			<label for="type" class="required">{{ service }} type</label>
			<span class="checker-wrap">
				<label class="checker">
					<input type="radio" value="apartment-flat" name="{{ service }}[type]" required>
					<span class="radio"></span>
					Apartment/Flat
				</label>
				<label class="checker">
					<input type="radio" value="house" name="{{ service }}[type]" required checked>
					<span class="radio"></span>
					House
				</label>
				<label class="checker">
					<input type="radio" value="bungalow" name="{{ service }}[type]" required>
					<span class="radio"></span>
					Bungalow
				</label>
			</span>
		</p>
		<p>
			<label>How many bedrooms?</label>
			<span class="checker-wrap">
				<label class="checker">
					<input type="radio" value="1" name="{{ service }}[bedrooms]" required>
					<span class="radio"></span>
					1 Bedroom
				</label>
				<label class="checker">
					<input type="radio" value="2" name="{{ service }}[bedrooms]" required>
					<span class="radio"></span>
					2 Bedrooms
				</label>
				<label class="checker">
					<input type="radio" value="3" name="{{ service }}[bedrooms]" required checked>
					<span class="radio"></span>
					3 Bedrooms
				</label>
				<label class="checker">
					<input type="radio" value="4" name="{{ service }}[bedrooms]" required>
					<span class="radio"></span>
					4 Bedrooms
				</label>
				<label class="checker">
					<input type="radio" value="5+" name="{{ service }}[bedrooms]" required>
					<span class="radio"></span>
					5 Bedrooms or more
				</label>
			</span>
		</p>
		<p>
			<label for="{{ service }}_value">{{ service }} Value</label>
			<input type="text" id="{{ service }}_value" name="{{ service }}[{{ service }}_value]" required data-min="20000" data-max="10000000" value="150000">
		</p>
	</fieldset>
	
	<fieldset>
		<legend>A Few Final Details</legend>
		<p>
			<label for="type" class="required">Survey type</label>
			<span class="checker-wrap">
				<label class="checker">
					<input type="radio" value="homebuyer" name="{{ service }}[type]" required>
					<span class="radio"></span>
					HomeBuyer Survey
				</label>
				<label class="checker">
					<input type="radio" value="building" name="{{ service }}[type]" required checked>
					<span class="radio"></span>
					Building Survey
				</label>
				<label class="checker">
					<input type="radio" value="valuation" name="{{ service }}[type]" required>
					<span class="radio"></span>
					Valuation Survey
				</label>
			</span>
		</p>
		<p>
			<label for="additional_information">Any other information you think we should know?</label>
			<textarea name="{{ service }}[additional_information]" id="additional_information" rows="5"></textarea>
		</p>
	</fieldset>
	
	<p>
		<input type="submit" name="{{ service }}[compare]" value="Compare Now">
	</p>
</form>